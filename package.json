{
  "name": "generator-important-misc",
  "version": "0.0.0",
  "description": "Create linter/formatter/githook into your project",
  "homepage": "https://github.com/nickccm1122/generator-important-misc",
  "author": {
    "name": "Nick Chan",
    "email": "nick.ccm1122@gmail.com",
    "url": "https://mingisaniceguy.com"
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": ["yeoman-generator"],
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "ignore-sync": "^1.2.0",
    "jest": "^22.0.6",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "standard-version": "^4.3.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "ramda": "^0.25.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "ignore-sync": "ignore-sync",
    "release": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"],
    "*ignore": ["ignore-sync"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "nickccm1122/generator-important-misc",
  "license": "MIT"
}
